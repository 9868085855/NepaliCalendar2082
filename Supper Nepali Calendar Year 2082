<body>
    <div class="container calendar-container">
        <div class="navigation">
            <button id="prev-month" class="btn-navigation nepali-text">पछिल्लो महिना</button>
            <h2 class="month-year nepali-text" id="month-year">बैशाख २०८२</h2>
            <button id="next-month" class="btn-navigation nepali-text">अघिल्लो महिना</button>
        </div>
        
        <div class="day-names nepali-text">
            <div>आइत</div>
            <div>सोम</div>
            <div>मंगल</div>
            <div>बुध</div>
            <div>बिहि</div>
            <div>शुक्र</div>
            <div>शनि</div>
        </div>
        
        <div class="days-grid" id="calendar-days">
            <!-- Calendar days will be generated by JavaScript -->
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Nepali months data for BS 2082
            const nepaliMonths = [
                { name: 'बैशाख', startDay: 'सोमबार', days: 31, year: 2082 },
                { name: 'जेठ', startDay: 'बिहिबार', days: 31, year: 2082 },
                { name: 'असार', startDay: 'आईतबार', days: 32, year: 2082 },
                { name: 'साउन', startDay: 'बिहिबार', days: 31, year: 2082 },
                { name: 'भदौ', startDay: 'आईतबार', days: 31, year: 2082 },
                { name: 'आश्विन', startDay: 'बुधबार', days: 31, year: 2082 },
                { name: 'कार्तिक', startDay: 'शनिबार', days: 30, year: 2082 },
                { name: 'मंसिर', startDay: 'सोमबार', days: 29, year: 2082 },
                { name: 'पुष', startDay: 'मंगलबार', days: 30, year: 2082 },
                { name: 'माघ', startDay: 'बिहिबार', days: 29, year: 2082 },
                { name: 'फागुन', startDay: 'शुक्रबार', days: 30, year: 2082 },
                { name: 'चैत्र', startDay: 'आईतबार', days: 30, year: 2082 }
            ];

            // Nepali number characters
            const nepaliNumbers = ['०', '१', '२', '३', '४', '५', '६', '७', '८', '९'];
            
            function convertToNepaliNumber(num) {
                return num.toString().split('').map(d => nepaliNumbers[parseInt(d)]).join('');
            }

            // English months mapping
            const englishMonths = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

            // Festival data - Updated with all requested festivals
            const festivals = {
                0: { // बैशाख
                    14: 'आमाको मुख हेर्ने दिन',
                    18: 'श्रमिक दिवस',
                    29: 'बुद्ध जयन्ती'
                },
                1: { // जेठ
                    15: 'गणतन्त्र दिवस'
                },
                2: { // असार
                    26: 'गुरु पूर्णिमा'
                },
                3: { // साउन
                    13: 'नाग पञ्चमी',
                    24: 'रक्षाबन्धन',
                    25: 'गाईजात्रा',
                    31: 'श्री कृष्णाष्टमी'
                },
                4: { // भदौ
                    7: 'पिता सम्मान दिवस',
                    10: 'तीजको ब्रत',
                    12: 'ऋषिपञ्चमी ब्रत',
                    15: 'गौरा पर्व',
                    23: 'शिक्षा दिवस',
                    29: 'बाल दिवस'
                },
                5: { // आश्विन
                    6: 'घटस्थापना',
                    13: 'फुलपाती',
                    14: 'महाष्टमी',
                    15: 'महानवमी',
                    16: 'विजया दशमी'
                },
                6: { // कार्तिक
                    2: 'काग तिहार',
                    3: 'लक्ष्मी पुजा',
                    4: 'गाईतिहार',
                    5: 'गोवर्द्धन पुजा',
                    6: 'भाई टीका',
                    10: 'छठ पर्व'
                },
                7: { // मंसिर
                    9: 'बिबाह पञ्चमी',
                    18: 'उधौली पर्व'
                },
                8: { // पुष
                    10: 'क्रिसमस दिवस',
                    15: 'तमु ल्होसार',
                    27: 'एकता दिवस (पृथ्वी जयन्ती)'
                },
                9: { // माघ
                    5: 'सोनाम ल्होसार',
                    9: 'सरस्वती जयन्ती',
                    16: 'शहीद दिवस'
                },
                10: { // फागुन
                    3: 'महाशिवरात्री',
                    6: 'ग्याल्पो ल्होसार',
                    7: 'प्रजातन्त्र दिवस',
                    18: 'फागु पर्व',
                    19: 'होली पर्व (तराईम बिदा)',
                    24: 'नारी दिवस'
                },
                11: { // चैत्र
                    4: 'घोडेजात्रा'
                }
            };

            // Day mapping
            const dayMapping = {
                'आईतबार': 0,
                'सोमबार': 1,
                'मंगलबार': 2,
                'बुधबार': 3,
                'बिहिबार': 4,
                'शुक्रबार': 5,
                'शनिबार': 6
            };

            // Corrected English dates for each Nepali month 1st day in 2082 BS (2025 AD)
            const englishStartDates = [
                { date: 14, month: 3 }, // बैशाख 1 = April 14
                { date: 15, month: 4 }, // जेठ 1 = May 15
                { date: 15, month: 5 }, // असार 1 = June 15
                { date: 17, month: 6 }, // साउन 1 = July 17
                { date: 17, month: 7 }, // भदौ 1 = August 17
                { date: 17, month: 8 }, // आश्विन 1 = September 17
                { date: 18, month: 9 }, // कार्तिक 1 = October 18
                { date: 17, month: 10 }, // मंसिर 1 = November 17
                { date: 16, month: 11 }, // पुष 1 = December 16
                { date: 15, month: 0 }, // माघ 1 = January 15
                { date: 13, month: 1 }, // फागुन 1 = February 13
                { date: 15, month: 2 }  // चैत्र 1 = March 15
            ];

            let currentMonthIndex = 0;

            // Initialize calendar
            function initCalendar() {
                updateCalendar();
                
                // Event listeners for navigation
                document.getElementById('prev-month').addEventListener('click', function() {
                    currentMonthIndex = (currentMonthIndex - 1 + nepaliMonths.length) % nepaliMonths.length;
                    updateCalendar();
                });
                
                document.getElementById('next-month').addEventListener('click', function() {
                    currentMonthIndex = (currentMonthIndex + 1) % nepaliMonths.length;
                    updateCalendar();
                });
            }

            // Update calendar display
            function updateCalendar() {
                const currentMonth = nepaliMonths[currentMonthIndex];
                const nepaliYear = convertToNepaliNumber(currentMonth.year);
                document.getElementById('month-year').textContent = `${currentMonth.name} ${nepaliYear}`;
                
                const daysGrid = document.getElementById('calendar-days');
                daysGrid.innerHTML = '';
                
                // Calculate starting day
                const startDayIndex = dayMapping[currentMonth.startDay];
                
                // Add empty cells for days before the 1st
                for (let i = 0; i < startDayIndex; i++) {
                    const emptyCell = document.createElement('div');
                    emptyCell.className = 'day-cell other-month';
                    daysGrid.appendChild(emptyCell);
                }
                
                // Add days of the month
                const englishStartDate = englishStartDates[currentMonthIndex];
                let currentEnglishDate = new Date(2025, englishStartDate.month, englishStartDate.date);
                
                for (let day = 1; day <= currentMonth.days; day++) {
                    const dayCell = document.createElement('div');
                    dayCell.className = 'day-cell';
                    
                    // Check if this is a festival day
                    const monthFestivals = festivals[currentMonthIndex];
                    const isFestivalDay = monthFestivals && monthFestivals[day];
                    
                    if (isFestivalDay) {
                        dayCell.classList.add('holiday');
                    }
                    
                    // Nepali date
                    const nepaliDate = document.createElement('div');
                    nepaliDate.className = 'nepali-date nepali-text';
                    nepaliDate.textContent = `${convertToNepaliNumber(day)} गते`;
                    dayCell.appendChild(nepaliDate);
                    
                    // English date
                    const englishDate = document.createElement('div');
                    englishDate.className = 'english-date english-text';
                    englishDate.textContent = `${englishMonths[currentEnglishDate.getMonth()]} ${currentEnglishDate.getDate()}`;
                    dayCell.appendChild(englishDate);
                    
                    // Festival text if applicable
                    if (isFestivalDay) {
                        const festivalText = document.createElement('div');
                        festivalText.className = 'festival nepali-text';
                        festivalText.textContent = isFestivalDay;
                        dayCell.appendChild(festivalText);
                    }
                    
                    daysGrid.appendChild(dayCell);
                    
                    // Increment English date
                    currentEnglishDate.setDate(currentEnglishDate.getDate() + 1);
                }
                
                // Fill remaining cells to complete the grid
                const totalCells = Math.ceil((startDayIndex + currentMonth.days) / 7) * 7;
                const remainingCells = totalCells - (startDayIndex + currentMonth.days);
                
                for (let i = 0; i < remainingCells; i++) {
                    const emptyCell = document.createElement('div');
                    emptyCell.className = 'day-cell other-month';
                    daysGrid.appendChild(emptyCell);
                }
            }

            initCalendar();
        });
    </script>
</body>
</html>
